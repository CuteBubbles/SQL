CREATE TABLE films (id INTEGER PRIMARY KEY,
    actor_id INTEGER,
    title TEXT);
    
INSERT INTO films (actor_id, title)
    VALUES (1, "Detroit");
INSERT INTO films (actor_id, title)
    VALUES (2, "Sicario");
