SELECT *
FROM superstore
LIMIT 5
;

--Write a SQL query that orders the items by price.
SELECT *
FROM superstore
ORDER BY PRICE DESC
;

--Write your own SQL query that will show a statistic about the item prices, like a sum, average, minimum, maximum, or count.
SELECT category, AVG(price) as "avg_price"
FROM superstore
WHERE category = "Electronics"
;

--Write your own SQL query that will show a statistic about the price for items in the category of "Kitchen Supplies".
--SELECT item_name, MIN(price) as "Lowest", MAX(price) as "Highest"
--FROM superstore
--WHERE category = "Kitchen Supplies";

SELECT item_name, price AS "Price", 'Lowest' AS Price_Type
FROM ( 
    SELECT item_name, price 
    FROM superstore 
    WHERE category = 'Kitchen Supplies' 
    ORDER BY price ASC, item_name ASC 
    LIMIT 1
) AS lowest_item 

UNION ALL

SELECT item_name, price AS "Price", 'Highest' AS Price_Type
FROM ( 
    SELECT item_name, price 
    FROM superstore 
    WHERE category = 'Kitchen Supplies' 
    ORDER BY price DESC, item_name ASC 
    LIMIT 1
) AS highest_item;
